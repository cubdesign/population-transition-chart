{
  "name": "population-transition-chart",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --watch --verbose",
    "cypress": "yarn --cwd e2e cypress",
    "cypress:headless": "yarn --cwd e2e cypress:headless",
    "e2e": "start-server-and-test 'yarn build && yarn start' http://localhost:3000 cypress",
    "e2e:headless": "start-server-and-test 'yarn build && yarn start' http://localhost:3000 cypress:headless",
    "lint": "next lint --dir src",
    "fmt": "prettier --write \"{src,__TEST__}/**/*.{ts,tsx}\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "{src,__TEST__}/**/*.{ts,tsx}": "yarn fmt"
  },
  "dependencies": {
    "next": "13.0.4",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "eslint": "8.27.0",
    "eslint-config-next": "13.0.4",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^13.0.3",
    "msw": "^0.48.3",
    "prettier": "2.7.1",
    "start-server-and-test": "^1.14.0",
    "typescript": "4.9.3",
    "whatwg-fetch": "^3.6.2"
  }
